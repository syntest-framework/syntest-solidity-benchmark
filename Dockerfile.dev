FROM node:12.20

WORKDIR /app

# Install truffle
RUN npm install -g truffle

WORKDIR /app/syntest-framework
RUN npm install
RUN npm run tsc

WORKDIR /app/syntest-solidity
RUN npm install
RUN npm run tsc

WORKDIR /app/syntest-solidity-benchmark
RUN npm install

CMD [ "truffle", "run", "syntest-solidity" ]
